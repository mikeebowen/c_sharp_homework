@model IEnumerable<HelloWorldWeb.Models.Product>

@{
    ViewBag.Title = "Products";
}

@if (Model.Count() > 0)
{
    <table>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    Stock Level:
                   @if (product.ProductCount > 2)
                   {
                       @: @product.ProductCount
                   } 
                   else if (product.ProductCount == 1)
                   {
                       @: Low Stock
                   }
                   else
                   {
                       @: Out of Stock
                   }
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>No product data found.</h2>
}